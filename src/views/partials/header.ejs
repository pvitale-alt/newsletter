        <button class="button" onclick="toggleSubscribeModal()">Suscribirse</button>
    </div>
</header>

<!-- Modal de Suscripción -->
<div id="subscribeModal" class="modal" style="display: none;">
    <div class="modal-content newsletter-modal">
        <span class="modal-close" onclick="toggleSubscribeModal()">&times;</span>
        <div class="newsletter-form" data-component="uni-subscribe" data-component-initialized="true">
            <div style="margin-bottom: 8px;">
                <p style="font-size: 16px; color: var(--text-primary); margin-bottom: 8px; text-align: center;">Suscribite para recibir noticias y novedades de Unitrade</p>
            </div>
            <div id="subscribeMessage" class="subscribe-message" style="display: none;"></div>
            <form id="subscribeForm" onsubmit="suscribirse(event)" style="display: flex; flex-direction: column; gap: 16px;">
                <div>
                    <label for="subscribe_name" style="display: block; font-size: 14px; color: var(--text-secondary); margin-bottom: 4px;">Nombre</label>
                    <input class="kw-form-input__field" name="name" id="subscribe_name" type="text" required aria-required="true" aria-label="Nombre" autocomplete="name" style="width: 100%; padding: 12px 16px; border: 1px solid var(--border-color); border-radius: 4px; font-size: 14px; font-family: 'Google Sans', 'Roboto', sans-serif;">
                </div>
                <div>
                    <label for="uni_subscribe_email" style="display: block; font-size: 14px; color: var(--text-secondary); margin-bottom: 8px;">Email</label>
                    <input class="kw-form-input__field uni_subscribe_email" name="email" id="uni_subscribe_email" type="email" placeholder="" required aria-required="true" aria-label="Email" autocomplete="email" style="width: 100%; padding: 12px 16px; border: 1px solid var(--border-color); border-radius: 4px; font-size: 14px; font-family: 'Google Sans', 'Roboto', sans-serif;">
                </div>
                <div>
                    <label for="subscribe_entity" style="display: block; font-size: 14px; color: var(--text-secondary); margin-bottom: 8px;">Entidad</label>
                    <input class="kw-form-input__field" name="bank_entity" id="subscribe_entity" type="text" aria-label="Entidad" autocomplete="organization" style="width: 100%; padding: 12px 16px; border: 1px solid var(--border-color); border-radius: 4px; font-size: 14px; font-family: 'Google Sans', 'Roboto', sans-serif;">
                </div>
                <button class="kw-button kw-button--high-emphasis newsletter-form__submit" type="submit" aria-label="Subscribe" data-content-type="blogv2 | newsletter page" data-page="in-line" style="padding: 10px 24px; background: #1a73e8; color: white; border: none; border-radius: 4px; font-size: 14px; font-weight: 500; font-family: 'Google Sans', 'Roboto', sans-serif; cursor: pointer; align-self: flex-start;">Subscribe</button>
            </form>
        </div>
    </div>
</div>

