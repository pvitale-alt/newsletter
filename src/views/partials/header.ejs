        <a href="/newsletter" class="nav-link <%= typeof activeMenu !== 'undefined' && activeMenu === 'newsletter' ? 'active' : '' %>">Newsletter</a>
        <a href="/proximamente" class="nav-link <%= typeof activeMenu !== 'undefined' && activeMenu === 'proximamente' ? 'active' : '' %>">Próximamente</a>
    </nav>
    
    <div class="header-right">
